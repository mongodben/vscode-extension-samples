{
	"name": "chat-sample",
	"publisher": "vscode-samples",
	"displayName": "StyleGandalf",
	"description": "Write in the MongoDB Style guide and save Middle Earth",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.92.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"activationEvents": [],
	"contributes": {
		"chatParticipants": [
			{
				"id": "style-gandalf.styleGandalf",
				"fullName": "Style Gandalf",
				"name": "StyleGandalf",
				"description": "You shall not...use passive voice!",
				"isSticky": true,
				"commands": [
					{
						"name": "check",
						"description": "Check if text is following the MongoDB style guide."
					}
				],
				"disambiguation": [
					{
						"categoryName": "cat",
						"description": "The user wants to learn a specific computer science topic in an informal way.",
						"examples": [
							"Teach me C++ pointers using metaphors",
							"Explain to me what is a linked list in a simple way",
							"Can you explain to me what is a function in programming?"
						]
					}
				]
			}
		],
		"commands": [
			{
				"command": "styleGandalf.check",
				"title": "Check if text follows the MongoDB style guide"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@vscode/prompt-tsx": "^0.2.8-alpha"
	},
	"devDependencies": {
		"@types/node": "^20.5.9",
		"@types/vscode": "1.90.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"eslint": "^8.26.0",
		"typescript": "^5.5.2"
	}
}
